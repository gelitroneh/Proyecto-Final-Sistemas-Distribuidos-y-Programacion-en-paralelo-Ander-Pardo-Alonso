@model List<Autores>
@{
    ViewBag.Title = "ConsultasA";
}

<!DOCTYPE html>
<html>
<head>
    <title>Busque un autor</title>
</head>
<body>
    <form method="post">
        <fieldset>
            <h2>Busqueda de autor por nombre</h2>
            <div>
                <label for="Nombre">Nombre:</label>
                <input type="text" name="Nombre" value="" />
                <input type="submit" value="Buscar" class="submit" />
            </div>
        </fieldset>
    </form>
</body>
</html>

@{
    if (IsPost)
    {
        string nombre = Request.Form["nombre"];

        <text>
            <hr />
            Nombre: @nombre

            <br />
            Resultados:
            <hr />
        </text>

        <body>
            <div class="container">
                <div class=" row">
                    @foreach (var Autores in Model)
                    {
                        if ((Autores.Nombre).Equals(nombre, StringComparison.OrdinalIgnoreCase))
                        {
                            <!--Distancia de las columnas-->
                            <div class="col-sm-4">
                                <!--Imagen con link-->
                                <a href="@Url.Action("DetalleA", "Autor", new { id = Autores.IdAutor })">
                                    <img src="@Autores.ImagenAutor" width="150" height="150" />
                                </a>
                                <a href="@Url.Action("DetalleA", "Autor", new { id = Autores.IdAutor })">
                                    <h4 style="color:black"> @Autores.Nombre</h4>
                                </a>


                                <a href="@Url.Action("DetalleA", "Autor", new { id = Autores.IdAutor })" class="btn btn-default right">Mas informacion</a>
                                <br /><br />
                                <a href="@Url.Action("ActualizarA", "Autor", new { id = Autores.IdAutor })" class="btn btn-primary right">Editar</a>
                                <a href="@Url.Action("EliminarA", "Autor", new { id = Autores.IdAutor })" class="btn btn-danger right">Eliminar</a>
                                <hr />
                            </div>
                        }
                    }
                </div>
            </div>
        </body>
    }
}


