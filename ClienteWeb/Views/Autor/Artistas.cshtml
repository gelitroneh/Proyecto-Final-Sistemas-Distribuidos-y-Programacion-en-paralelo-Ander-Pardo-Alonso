@model List<Autores>
@{
    ViewBag.Title = "Artistas";
}

    <h2>Artistas</h2>
    <div class="field" id="searchform">
        <a href="@Url.Action("NuevoA","Autor")" class="btn btn-success right">Nuevo artista</a>
    </div>
    <br />
    <body>
        <div class="container">
            <div class=" row">
                @foreach (var Autores in Model)
                {
                    <!--Distancia de las columnas-->
                    <div class="col-sm-4">
                        <!--Imagen con link-->
                        <a href="@Url.Action("DetalleA","Autor", new { id=Autores.IdAutor})">
                            <img src="@Autores.ImagenAutor" width="150" height="150" />
                        </a>
                        <a href="@Url.Action("DetalleA","Autor", new { id=Autores.IdAutor})">
                            <h4 style="color:black"> @Autores.Nombre</h4>
                        </a>


                        <a href="@Url.Action("DetalleA","Autor", new { id=Autores.IdAutor})" class="btn btn-default right">Mas informacion</a>
                        <br /><br />
                        <a href="@Url.Action("ActualizarA","Autor", new { id=Autores.IdAutor})" class="btn btn-primary right">Editar</a>
                        <a href="@Url.Action("EliminarA","Autor", new { id=Autores.IdAutor})" class="btn btn-danger right">Eliminar</a>
                        <hr />
                    </div>
                }
            </div>
        </div>
    </body>
