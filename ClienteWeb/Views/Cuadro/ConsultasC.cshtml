@model List<Cuadros>
@{
    ViewBag.Title = "ConsultasC";
}

<!DOCTYPE html>
<html>
<head>
    <title>Busque un cuadro</title>
</head>
<body>
    <form method="post">
        <fieldset>
            <h2>Busqueda de cuadro por titulo</h2>
            <div>
                <label for="Titulo">Titulo:</label>
                <input type="text" name="Titulo" value="" />
                <input type="submit" value="Buscar" class="submit" />
            </div>
        </fieldset>
    </form>
</body>
</html>

@{
    if (IsPost)
    {
        string titulo = Request.Form["titulo"];

        <text>
            <hr />
            Titulo: @titulo

            <br />
            Resultados:
            <hr />
        </text>

        <body>
            <div class="container">
                <div class=" row">
                    @foreach (var Cuadros in Model)
                    {                                              
                        if ((Cuadros.Titulo).Equals(titulo,StringComparison.OrdinalIgnoreCase))
                        {
                            <!--Distancia de las columnas-->
                            <div class="col-sm-4">
                                <!--Imagen con link-->
                                <a href="@Url.Action("DetalleC", "Cuadro", new { id = Cuadros.IdCuadro })">
                                    <img src="@Cuadros.ImagenCuadro" width="150" height="150" />
                                </a>
                                <a href="@Url.Action("DetalleA", "Cuadro", new { id = Cuadros.IdCuadro })">
                                    <h4 style="color:black"> @Cuadros.Titulo</h4>
                                </a>


                                <a href="@Url.Action("DetalleC", "Cuadro", new { id = Cuadros.IdCuadro })" class="btn btn-default right">Mas informacion</a>
                                <br /><br />
                                <a href="@Url.Action("ActualizarC", "Cuadro", new { id = Cuadros.IdCuadro })" class="btn btn-primary right">Editar</a>
                                <a href="@Url.Action("EliminarC", "Cuadro", new { id = Cuadros.IdCuadro })" class="btn btn-danger right">Eliminar</a>
                                <hr />
                            </div>
                        }
                    }
                </div>
            </div>
        </body>
    }
}


